<!-- ServiceSphere.Web/Views/Supplier/Index.cshtml -->
@model IEnumerable<ServiceSphere.Domain.Entities.Supplier>

<h1>Suppliers</h1>
<a asp-action="Create">Create Supplier</a>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.Name</td>
                <td>@supplier.Contact</td>
                <td>
                    <a asp-action="Details" asp-route-id="@supplier.SupplierId">Details</a>
                    <a asp-action="Edit" asp-route-id="@supplier.SupplierId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@supplier.SupplierId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
