<!-- ServiceSphere.Web/Views/Event/Delete.cshtml -->
@model ServiceSphere.Domain.Entities.Event

<h1>Eliminar Evento</h1>

<p>¿Está seguro de que desea eliminar el evento: <strong>@Model.Name</strong>?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Eliminar</button>
    <a asp-action="Index">Cancelar</a>
</form>
