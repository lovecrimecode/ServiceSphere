@model ServiceSphere.Infrastructure.Models.EventModel

<h1>Delete Event</h1>

<div>
    <h4>Are you sure you want to delete this event?</h4>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Budget</dt>
        <dd class="col-sm-10">@Model.Budget.ToString("C")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.HiddenFor(m => m.EventId)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Events" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>