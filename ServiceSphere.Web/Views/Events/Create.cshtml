@model ServiceSphere.Infrastructure.Models.EventModel

<h1>Create Event</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" required />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" required />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Budget"></label>
        <input asp-for="Budget" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Budget" class="text-danger"></span>
    </div>
    <div>
        <label for="OrganizerId">Organizer (optional)</label>
        <select asp-for="OrganizerId" asp-items="ViewBag.Organizers"></select>
    </div>
    <div>
        <label for="Services">Services (optional)</label>
        <select asp-for="ServiceIds" asp-items="ViewBag.Services" multiple></select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Events" asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}