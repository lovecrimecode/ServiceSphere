@model IEnumerable<ServiceSphere.Domain.Entities.Event>

<h1>Events</h1>

<p>
    <a asp-controller="Events" asp-action="Create" class="btn btn-primary">Create New Event</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>Budget</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Name</td>
                <td>@eventItem.Date.ToShortDateString()</td>
                <td>@eventItem.Location</td>
                <td>@eventItem.Budget.ToString("C")</td>
                <td>
                    <a asp-controller="Events" asp-action="Edit" asp-route-id="@eventItem.EventId" class="btn btn-warning">Edit</a>
                    <a asp-controller="Events" asp-action="Delete" asp-route-id="@eventItem.EventId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this event?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
