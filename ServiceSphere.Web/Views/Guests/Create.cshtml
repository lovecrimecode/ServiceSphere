@model ServiceSphere.Infrastructure.Models.GuestModel

<h1>Create Guest</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsAttending"></label>
        <input asp-for="IsAttending" type="checkbox" class="form-control" />
        <span asp-validation-for="IsAttending" class="text-danger"></span>
    </div>
    <div>
        <label for="EventId">Event (optional)</label>
        <select asp-for="EventId" asp-items="ViewBag.Events"></select>
        <span asp-validation-for="EventId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Guests" asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}