@model ServiceSphere.Infrastructure.Models.GuestModel

<h1>Delete Guest</h1>

<div>
    <h4>Are you sure you want to delete this guest?</h4>
    <h4>@Model.Name</h4>
    <hr />

    <form asp-action="Delete" method="post">
        @Html.HiddenFor(m => m.GuestId)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Guests" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>