@model IEnumerable<ServiceSphere.Domain.Entities.Guest>

<h1>Guests</h1>
<p><a asp-controller="Guests" asp-action="Create" class="btn btn-primary">Create Guest</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>IsAttending</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.IsAttending</td>
                <td>
                    <a asp-controller="Guests" asp-action="Edit" asp-route-id="@service.GuestId" class="btn btn-warning">Edit</a>
                    <a asp-controller="Guests" asp-action="Delete" asp-route-id="@service.GuestId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
